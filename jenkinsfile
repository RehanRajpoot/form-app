pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/RehanRajpoot/form-app.git'
                // Remove credentialsId if repo is public
            }
        }

        stage('Run Tests') {
            steps {
                bat 'python -m pytest > result.log'
            }
        }
    }
}
